@model IEnumerable<BlogApp.Models.Blog>
@{
    ViewBag.Title = "OnayListesi";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mt-3">
            <li class="breadcrumb-item"><a class="link-dark" href="/">Home</a></li>
            <li class="breadcrumb-item"><a class="link-dark" href="/Admin/">Admin List</a></li>
            <li class="breadcrumb-item active" aria-current="page">Approved Blog List</li>
        </ol>
    </nav>

    <h3>Admin Approved Blog List</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>No Records Found!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered table-striped table-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KullaniciAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
                </th>
                <th style="width:320px;">
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th style="width:320px;">
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th style="width:150px;">
                    @Html.DisplayNameFor(model => model.EklenmeTarihi)
                </th>
                <th class="text-center" style="width:60px;">
                    <i class="fa-regular fa-eye"></i>
                </th>
                <th style="width:50px;">
                    @Html.DisplayNameFor(model => model.Onay)
                </th>
                <th style="width:90px;">
                    @Html.DisplayNameFor(model => model.Anasayfa)
                </th>
                <th class="text-center" style="width:125px;"><i class="fa-solid fa-gear"></i></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KullaniciAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EklenmeTarihi)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Goruntulenme)
                    </td>
                    <td class="text-center">
                        @if (item.Onay)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td class="text-center">
                        @if (item.Anasayfa)
                        {
                            <i class="fa-solid fa-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    }

</div>

