@model IEnumerable<BlogApp.Models.Kategori>

<div class="mt-3">
    <h5 class="text-center">Categories</h5>
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-md-6 text-center">
                <ul class="list-unstyled">
                    <li>
                        <a href="/Home/BlogListesi/@item.Id" class="kategoriler btn btn-dark w-100 d-flex justify-content-between"><div>@item.KategoriAdi</div><div><i class="fa-solid fa-list"></i></div></a>
                    </li>
                </ul>
            </div>
        }
    </div>

</div>