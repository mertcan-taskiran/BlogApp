@model IEnumerable<BlogApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row mt-3">
                <h5>Latest Posts <i class="fa-brands fa-blogger-b fa-bounce"></i></h5>
            </div>

            <!--card-->
            @Html.Partial("_Card")

        </div>

        <div class="col-md-3">

            <!--search-->
            @Html.Partial("_Search")

            <!--category-->
            @Html.Action("KategoriListesi", "Kategori")

            <!--most read blogs-->
            @Html.Action("EnCokOkunan","Home")

        </div>
    </div>
</div>

