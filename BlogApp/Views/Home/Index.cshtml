@model PagedList<BlogApp.Models.BlogModel>
@using PagedList;
@using PagedList.Mvc;
       
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">

        <div class="col-lg-9">

            <div class="d-flex justify-content-between mt-3">
                <p class="h5">Latest Posts <i class="fa-brands fa-blogger-b fa-bounce"></i></p>
                @Html.Partial("_listorgrid")
            </div>

            <!--card-->
            @Html.Partial("_Card")

            <div class="text-center">
                @Html.PagedListPager(Model, sayi => Url.Action("Index", new { sayi }))
            </div>
        </div>

        <div class="col-lg-3">
            <!--category-->
            @Html.Action("KategoriListesi", "Kategori")
            <!--most read blogs-->
            @Html.Action("EnCokOkunan", "Home")
        </div>

    </div>
</div>