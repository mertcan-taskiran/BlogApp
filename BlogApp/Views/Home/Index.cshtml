@model IEnumerable<BlogApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row mt-3">
                <h5>Latest Posts <i class="fa-brands fa-blogger-b fa-bounce"></i></h5>              
            </div>
            <!--card-->
            @foreach (var item in Model)
            {
                <div class="card my-3 w-100">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/Content/images/@item.Resim" class="img-fluid rounded-start w-100 h-100" alt="image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-header">
                                <span class="badge rounded-pill text-bg-secondary"><i class="fa-regular fa-clock"></i> @item.EklenmeTarihi</span>
                            </div>
                            <div class="card-body">

                                <h5 class="card-title">@item.Baslik</h5>
                                <p class="card-text">@item.Aciklama</p>

                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <div class="card-text">
                                    <span class="badge rounded-pill text-bg-warning"><i class="fa-regular fa-eye"></i> @item.Goruntulenme</span>
                                    <span class="badge rounded-pill text-bg-info"><i class="fa-regular fa-comment"></i> @item.Goruntulenme</span>
                                </div>
                                <span class="badge rounded-pill text-bg-dark"><a href="/Home/Detay/@item.Id" class="text-decoration-none text-white">Read More <i class="fa-solid fa-arrow-right"></i></a></span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="col-md-3">

            <!--search-->
            @Html.Partial("_Search")

            <!--category-->
            @Html.Action("KategoriListesi", "Kategori")

            <!--most read blogs-->
            <h5 class="text-center mt-3">Most Read Blogs</h5>
            <div class="card w-100 mt-2">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/Content/images/card.jpeg" class="img-fluid rounded-start w-100 h-100" alt="image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-header">
                            <div class="card-text"><small class="text-body-secondary"><i class="fa-regular fa-clock"></i> 3 mins ago</small></div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                        </div>
                        <div class="card-footer">
                            <div class="card-text"><small class="text-body-secondary"><i class="fa-regular fa-eye"></i> 50</small></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

