<div class="sec" id="skills">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Skills</h2>
                <hr />
                <ul class="list-unstyled">
                    @foreach (var item in Model)
                    {
                        <li>
                            <h5><i class="fa-solid fa-code"></i> @item.YetenekAdi</h5>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="sec" id="progress">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Progress</h2>
                <hr />
                @foreach (var item in Model)
                {
                    <div class="mb-3">
                        <h6>@item.YetenekAdi</h6>
                        <div class="progress">
                            @if (item.Progress < 20)
                            {
                                <div class="progress-bar" role="progressbar" style="width: @item.Progress%; background-color: #ff0000;"></div>
                            }
                            else if (item.Progress < 40)
                            {
                                <div class="progress-bar" role="progressbar" style="width: @item.Progress%; background-color: #ff8000;"></div>
                            }
                            else if (item.Progress < 60)
                            {
                                <div class="progress-bar" role="progressbar" style="width: @item.Progress%; background-color: #ffff00"></div>
                            }
                            else if (item.Progress < 80)
                            {
                                <div class="progress-bar" role="progressbar" style="width: @item.Progress%; background-color: #bfff00;"></div>
                            }
                            else
                            {
                                <div class="progress-bar" role="progressbar" style="width: @item.Progress%; background-color: #40ff00;"></div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="sec" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Contact Me</h2>
                <hr />
                <form action="/Contact/Send" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="inputName" class="form-label">Name Surname</label>
                            <input type="text" class="form-control" id="inputName" name="inputName" placeholder="Name Surname" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="example@example.com" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="inputSubject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="inputSubject" name="inputSubject" placeholder="Subject" required>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="inputMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="inputMessage" name="inputMessage" rows="4" placeholder="Message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var typed = new Typed('#my-paragraph', {
            strings: ["Web Developer", "Web Designer"],
            typeSpeed: 100,
            backSpeed: 100,
            loop: true
        });
    });

    // vertical

    $(document).ready(function () {

        $(window).on('scroll', function () {

            var link = $('.navbarx a.dot');
            var top = $(window).scrollTop();

            $('.sec').each(function () {
                var id = $(this).attr('id');
                var height = $(this).height();
                var offset = $(this).offset().top - 150;
                if (top >= offset && top < offset + height) {
                    link.removeClass('active');
                    $('.navbarx').find('[data-scroll="' + id + '"]').addClass('active');
                }
            });
        });
    });

</script>
