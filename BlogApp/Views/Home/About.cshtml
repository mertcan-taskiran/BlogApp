@model IEnumerable<BlogApp.Models.Yetenek>

@{
    ViewBag.Title = "About";
}

<style media="screen">

    html {
        scroll-behavior: smooth;
    }

    body {
        overflow-x: hidden;
    }

    .navbarx {
        position: fixed;
        top: 50%;
        right: 30px;
        transform: translateY(-50%);
        z-index: 1000;
    }

    .navbarx ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .navbarx ul li {
        width: 200px;
        position: relative;
        text-align: right;
    }

    .navbarx ul li .dot {
        color: #fff;
        display: block;
        padding: 5px 0;
    }

    .navbarx ul li .dot span {
        display: inline-block;
        background: #f44336;
        letter-spacing: 1px;
        padding: 10px 25px;
        margin-right: 30px;
        border-radius: 3px;
        transform: translateX(30px);
        opacity: 0;
    }

    .navbarx ul li:hover .dot span {
        transform: translateX(0px);
        opacity: 1;
    }

    .navbarx ul li .dot span::before {
        content: '';
        position: absolute;
        top: 50%;
        right: 0;
        transform: translate(7px, -50%);
        border-left: 7px solid #f44336;
        border-top: 7px solid transparent;
        border-bottom: 7px solid transparent;
        display: block;
    }

    .navbarx ul li .dot::before,
    .navbarx ul li .dot::after {
        content: '';
        position: absolute;
        top: 50%;
        border-radius: 50%;
        display: block;
        transition: .2s ease-out;
    }

    .navbarx ul li .dot::before {
        height: 5px;
        width: 5px;
        border: 2px solid #333;
        right: 0;
        transform: translateY(-50%);
    }

    .navbarx ul li .dot.active::before,
    .navbarx ul li:hover .dot::before {
        border-color: #f44336;
        background: #f44336;
    }

    .navbarx ul li .dot::after {
        height: 15px;
        width: 15px;
        border: 2px solid #f44336;
        right: -5px;
        transform: translateY(-50%) scale(0);
    }

    .navbarx ul li .dot.active::after,
    .navbarx ul li:hover .dot::after {
        transform: translateY(-50%) scale(1);
    }

    .sec {
        min-height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666666;
        background: #e6e6e6;
        letter-spacing: 2px;
    }

    .sec:nth-child(odd) {
        background: #f2f2f2;
    }

    #my-paragraph {
        display: inline-block;
    }
</style>

<nav class="navbarx">
    <ul>
        <li><a href="#about" class="dot active" data-scroll="about"><span>about</span></a></li>
        <li><a href="#me" class="dot" data-scroll="me"><span>me</span></a></li>
        <li><a href="#skills" class="dot" data-scroll="skills"><span>skills</span></a></li>
        <li><a href="#progress" class="dot" data-scroll="progress"><span>progress</span></a></li>
        <li><a href="#contact" class="dot" data-scroll="contact"><span>contact</span></a></li>
    </ul>
</nav>

<div class="sec" id="about">
    <div class="container ">
        <div class="row">
            <div class="col-md-12 text-center">

                <h2>About Me</h2>
                <hr />
                <div>
                    <h3>I'm Mertcan Taşkıran</h3>
                    <h3 id="my-paragraph"></h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="sec" id="me">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Me</h2>
                <hr />
                <p>
                    Hello, My name is Mertcan, I am 25 years old, I am a graduate of Fırat University, I am a web developer.
                </p>
                <p>
                    I gained experience during my undergraduate education and with my personal knowledge. In my learning process, besides basic web technologies such as Html, Css, JavaScript, I also learned technologies such as Angular, C# and asp.net in my projects.
                </p>
                <p>
                    During these projects, I used processes such as database management, user session management, product management, payment processing and order tracking.
                    I learned the processes of coding, designing and publishing websites. I also know about tools like GitHub for storing and sharing my builds.
                </p>
                <p>
                    I can describe myself as a self-motivated, open to learning and collaborative person.
                </p>                
            </div>
        </div>
    </div>
</div>

<div class="sec" id="skills">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Skills</h2>
                <hr />
                <ul class="list-unstyled">
                    @foreach (var item in Model)
                    {
                        <li>
                            <h5><i class="fa-solid fa-code"></i> @item.YetenekAdi</h5>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="sec" id="progress">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Progress</h2>
                <hr />
                @foreach (var item in Model)
                {
                    <div class="mb-3">
                        <h6>@item.YetenekAdi</h6>
                        <div class="progress">
                            @if (item.Progress < 20)
                            {
                                <div class="progress-bar progress-bar-striped bg-dark progress-bar-animated" role="progressbar" style="width: @item.Progress%;" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress</div>
                            }
                            else if (item.Progress < 40)
                            {
                                <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width: @item.Progress%;" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress</div>
                            }
                            else if (item.Progress < 60)
                            {
                                <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" style="width: @item.Progress%;" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress</div>
                            }
                            else if (item.Progress < 80)
                            {
                                <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: @item.Progress%;" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress</div>
                            }
                            else
                            {
                                <div class="progress-bar progress-bar-striped bg-primary progress-bar-animated" role="progressbar" style="width: @item.Progress%;" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">@item.Progress</div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="sec" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Contact Me</h2>
                <hr />
                <form action="/Contact/Send" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="inputName" class="form-label">Name Surname</label>
                            <input type="text" class="form-control" id="inputName" name="inputName" placeholder="Name Surname" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="example@example.com" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="inputSubject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="inputSubject" name="inputSubject" placeholder="Subject" required>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="inputMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="inputMessage" name="inputMessage" rows="4" placeholder="Message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var typed = new Typed('#my-paragraph', {
            strings: ["Web Developer", "Web Designer"],
            typeSpeed: 100,
            backSpeed: 100,
            loop: true
        });
    });

    // vertical

    $(document).ready(function () {

        $(window).on('scroll', function () {

            var link = $('.navbarx a.dot');
            var top = $(window).scrollTop();

            $('.sec').each(function () {
                var id = $(this).attr('id');
                var height = $(this).height();
                var offset = $(this).offset().top - 150;
                if (top >= offset && top < offset + height) {
                    link.removeClass('active');
                    $('.navbarx').find('[data-scroll="' + id + '"]').addClass('active');
                }
            });
        });
    });

</script>
