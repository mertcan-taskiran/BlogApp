@model IEnumerable<BlogApp.Models.Yetenek>

@{
    ViewBag.Title = "About";
}

<style media="screen">

    html {
        scroll-behavior: smooth;
    }

    body {
        overflow-x: hidden;
    }

    .navbarx {
        position: fixed;
        top: 50%;
        right: 30px;
        transform: translateY(-50%);
        z-index: 1000;
    }

    .navbarx ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .navbarx ul li {
        width: 200px;
        position: relative;
        text-align: right;
    }

    .navbarx ul li .dot {
        color: #fff;
        display: block;
        padding: 5px 0;
    }

    .navbarx ul li .dot span {
        display: inline-block;
        background: #f44336;
        letter-spacing: 1px;
        padding: 10px 25px;
        margin-right: 30px;
        border-radius: 3px;
        transform: translateX(30px);
        opacity: 0;
    }

    .navbarx ul li:hover .dot span {
        transform: translateX(0px);
        opacity: 1;
    }

    .navbarx ul li .dot span::before {
        content: '';
        position: absolute;
        top: 50%;
        right: 0;
        transform: translate(7px, -50%);
        border-left: 7px solid #f44336;
        border-top: 7px solid transparent;
        border-bottom: 7px solid transparent;
        display: block;
    }

    .navbarx ul li .dot::before,
    .navbarx ul li .dot::after {
        content: '';
        position: absolute;
        top: 50%;
        border-radius: 50%;
        display: block;
        transition: .2s ease-out;
    }

    .navbarx ul li .dot::before {
        height: 5px;
        width: 5px;
        border: 2px solid #333;
        right: 0;
        transform: translateY(-50%);
    }

    .navbarx ul li .dot.active::before,
    .navbarx ul li:hover .dot::before {
        border-color: #f44336;
        background: #f44336;
    }

    .navbarx ul li .dot::after {
        height: 15px;
        width: 15px;
        border: 2px solid #f44336;
        right: -5px;
        transform: translateY(-50%) scale(0);
    }

    .navbarx ul li .dot.active::after,
    .navbarx ul li:hover .dot::after {
        transform: translateY(-50%) scale(1);
    }

    .sec {
        min-height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666666;
        background: #e6e6e6;
        letter-spacing: 2px;
    }

    .sec:nth-child(odd) {
        background: #f2f2f2;
    }

    #my-paragraph {
        display: inline-block;
    }
</style>

<nav class="navbarx">
    <ul>
        <li><a href="#about" class="dot active" data-scroll="about"><span>about</span></a></li>
        <li><a href="#me" class="dot" data-scroll="me"><span>me</span></a></li>
        <li><a href="#skills" class="dot" data-scroll="skills"><span>skills</span></a></li>
        <li><a href="#progress" class="dot" data-scroll="progress"><span>progress</span></a></li>
        <li><a href="#contact" class="dot" data-scroll="contact"><span>contact</span></a></li>
    </ul>
</nav>

<div class="sec" id="about">
    <div class="container ">
        <div class="row">
            <div class="col-md-12 text-center">

                <h2>About Me</h2>
                <hr />
                <div>
                    <h3>I'm Mertcan Taşkıran</h3>
                    <h3 id="my-paragraph"></h3>
                </div>
            </div>
        </div>
    </div>
</div>

