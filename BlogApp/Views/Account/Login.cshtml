@model BlogApp.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mt-3">
                <li class="breadcrumb-item"><a class="link-dark" href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
            </ol>
        </nav>

        <div class="col-md-12">

            <!--form-->
            <h3 class="col-md-12 text-center text-md-start"><i class="fa-solid fa-user"></i> Login</h3>
            <hr />

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
            {
                <div class="row text-center mt-3">
                    <label class="col-md-2 col-form-label">Username</label>
                    <div class="col-md-4">
                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row text-center mt-3">
                    <label class="col-md-2 col-form-label">Password</label>
                    <div class="col-md-4">
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row text-center my-3">
                    <label class="col-md-2 col-form-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-dark col-6">Login</button>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

